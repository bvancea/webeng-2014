<div class="container">
  <fieldset>
    <legend class="col-md-4 col-lg-offset-4">
  <h1>Login</h1>

  <%= form_for :login, url: login_login_path do |f| %>

      <div class="form-group">
        <% if (params[:alert] != nil) %>
            <%= params[:alert] %>
        <% end %>
      </div>

      <div class="form-group">
        <%= f.label :username %>
        <br>
        <%= f.text_field :username %>
      </div>

      <div class="form-group">
        <%= f.label :password %>
        <br>
        <%= f.password_field :password %>
      </div>

      <div class="form-group">
        <%= f.submit "Login", :class => "btn btn-primary" %>
      </div>

      <%= link_to "Register", controller: 'users', action: 'new' %>
  <% end %>
    </legend>
  </fieldset>

</div>