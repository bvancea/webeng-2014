<div class="page-header">
  <h1>Login</h1>
</div>


<%= form_for :login, url: login_login_path do |f| %>

    <div class="form-group">
      <% if (params[:alert] != nil) %>
          <div class="alert alert-danger"><%= params[:alert] %></div>
      <% end %>
    </div>

    <div class="form-group">
      <%= f.label :username %>
      <br>
      <%= f.text_field :username %>
    </div>

    <div class="form-group">
      <%= f.label :password %>
      <br>
      <%= f.password_field :password %>
    </div>

    <div class="form-group">
      <%= f.submit "Login", :class => "btn btn-primary" %>
      or <%= link_to "Register", controller: 'users', action: 'new' %>
    </div>


<% end %>