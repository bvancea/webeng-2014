<h1>Login</h1>

<%= form_for :login, url: login_login_path do |f| %>

    <p>
      <% if (params[:alert] != nil) %>
      <%= params[:alert] %>
      <% end %>
    </p>

    <p>
      <%= f.label :username %><br>
      <%= f.text_field :username %>
    </p>

    <p>
      <%= f.label :password %><br>
      <%= f.password_field :password %>
    </p>

    <p>
      <%= f.submit "Login" %>
    </p>

<% end %>

<%= link_to "Register", controller: 'users', action: 'new' %>