<div class="container">
  <fieldset>
    <legend class="col-md-4 col-lg-offset-4">

      <h1>Register new user</h1>

      <%= form_for :user, url: users_path do |f| %>
          <div class="form-group">
            <%= f.label :name %><br>
            <%= f.text_field :name %>
          </div>

          <div class="form-group">
            <%= f.label :username %><br>
            <%= f.text_field :username %>
          </div>

          <div class="form-group">
            <%= f.label :password %><br>
            <%= f.password_field :password %>
          </div>

          <div class="form-group">
            <%= f.submit "Register" , :class => "btn btn-primary"%>
          </div>
      <% end %>

    </legend>
  </fieldset>

</div>