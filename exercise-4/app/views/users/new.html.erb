<div class="page-header">
  <h1>Register new user</h1>
</div>

<%= form_for :user, url: users_path do |f| %>
    <div class="form-group">
      <%= f.label :name %>
      <br>
      <%= f.text_field :name %>
    </div>

    <div class="form-group">
      <%= f.label :username %>
      <br>
      <%= f.text_field :username %>
    </div>

    <div class="form-group">
      <%= f.label :password %>
      <br>
      <%= f.password_field :password %>
    </div>

    <div class="form-group">
      <%= f.submit "Register", :class => "btn btn-primary" %>
    </div>
<% end %>