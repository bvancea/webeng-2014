<div class="container">
  <fieldset>
    <legend class="col-md-4 col-lg-offset-4">

      <% provide(:title, "Edit group") %>
      <h1>Update your group</h1>

      <div>
        <div class="span6 offset3">
          <%= form_for(@group) do |f| %>
              <!--%= render 'shared/error_messages' %-->

              <div class="form-group">
                <%= f.label :name %>
                <br>
                <%= f.text_field :name %>
              </div>

              <div class="form-group">
                <%= f.label :description %>
                <br>
                <%= f.text_field :description %>
              </div>

              <div class="form-group">
                <%= f.label "Members:" %>
                <% for user in User.where('id != ?', session[:logged_user_id]) %>
                    <br><%= check_box_tag "user_ids[]", user.id, (@user_ids.include?(user.id)) %>
                    <%= user.name %>
                <% end %>
              </div>

              <%= f.submit "Save changes", class: "btn btn-primary" %>
          <% end %>
        </div>
      </div>

    </legend>
  </fieldset>

</div>
