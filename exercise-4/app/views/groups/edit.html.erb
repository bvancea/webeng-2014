<% provide(:title, "Edit group") %>
<h1>Update your group</h1>

<div class="row">
  <div class="span6 offset3">
    <%= form_for(@group) do |f| %>
        <!--%= render 'shared/error_messages' %-->

        <%= f.label :name %>
        <%= f.text_field :name %>

        <%= f.label :description %>
        <%= f.text_field :description %>
        <br><br>
        Members:
        <% for user in User.where('id != ?',session[:logged_user_id]) %>
            <br><%= check_box_tag "user_ids[]", user.id, (@user_ids.include?(user.id)) %>
            <%= user.name %>
        <% end %>
        <br>
        <%= f.submit "Save changes", class: "btn btn-large btn-primary" %>
    <% end %>
  </div>
</div>
