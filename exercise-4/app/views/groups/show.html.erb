
<div class="page-header">
  <h1>Group details:</h1>
</div>

<dl class="dl-horizontal">
  <dt>Name:</dt>
  <dd><%= @group.name %></dd>

  <dt>Description:</dt>
  <dd><%= @group.description %></dd>

  <dt>Home town:</dt>
  <dd><%= @group.city %></dd>

  <dt>Created at:</dt>
  <dd><%= @group.created_at.to_formatted_s(:long) %></dd>

  <dt>Owner:</dt>
  <dd><b><%= @owner.name %></b> (<%= @owner.username %>)</dd>

  <% if @group.memberships.any? %>
      <dt>Members:</dt>
      <dd>
      <ul class="list-unstyled">
        <% @users.each do |user| %>
            <li>
              <b><%= user.name %></b> (<%= user.username %>)
              <span style="padding-left: 25px"><%= link_to 'Ban this member', membership_path(:user => user, :group => @group), method: :delete, data: {confirm: 'Are you sure to remove this membership?'} %></span>
            </li>
        <% end %>
      </ul>
      </dd>
  <% end %>

</dl>