<div class="page-header">
  <% provide(:title, 'Create new group') %>
  <h1>Create new group</h1>
</div>


<div class="row">
  <div class="span6 offset3">
    <%= form_for(@group) do |f| %>
        <%= render 'shared/error_messages', object: f.object %>
        <div class="form-group">
          <%= f.label :name %>
          <br>
          <%= f.text_field :name %>
        </div>

        <div class="form-group">
          <%= f.label :description %>
          <br>
          <%= f.text_field :description %>
        </div>

        <div class="form-group">
          <%= f.label :city %>
          <br>
          <%= f.text_field :city %>
        </div>

        <div class="form-group">
          <%= f.label "Members:" %>
          <% for user in User.where('id != ?', session[:logged_user_id]) %>
              <br><%= check_box_tag "user_ids[]", user.id %>
              <%= user.name %>
          <% end %>
        </div>

        <%= f.submit "Create group", class: "btn btn-primary" %>
    <% end %>
  </div>
</div>