<div class="container">
  <fieldset>
    <legend class="col-md-6 col-lg-offset-3">

      <h1>Add new activity to <%= @current_group.name %> </h1>

      <%= form_for :activity, url: activities_path do |f| %>

          <div class="form-group">
            <%= f.label :name %><br>
            <%= f.text_field :name %>
          </div>

          <div class="form-group">
            <%= f.label :location %><br>
            <%= f.text_field :location %>
          </div>

          <div class="form-group">
            <%= f.label :description %><br>
            <%= f.text_area :description %>
          </div>

          <div class="form-group">
            <%= f.label :start_date %><br>
            <%= f.datetime_select :start_date %>
          </div>

          <div class="form-group">
            <%= f.label :duration %><br>
            <%= f.text_field :duration %>
          </div>

          <div class="form-group">
            <%= f.submit "Add activity" , :class => "btn btn-primary"%>
          </div>
      <% end %>

    </legend>
  </fieldset>

</div>